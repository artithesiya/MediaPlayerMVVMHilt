<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/sound_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sound_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySplash">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name=".utils.NotificationReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.soundapp.ACTION_PLAY_PAUSE" />
                <action android:name="com.example.soundapp.ACTION_STOP" />
            </intent-filter>
        </receiver>
    </application>

</manifest>